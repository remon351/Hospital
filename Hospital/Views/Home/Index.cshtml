@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Welcome to Our Hospital, where we provide the highest quality medical care.">
    <title>Welcome to Our Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .centered-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .table-container {
            max-width: 400px; 
            width: 100%; 
        }
    </style>
</head>
<body>
    <div class="container centered-content">
        <h1>Welcome to Our Hospital</h1>
        <p>Thank you for choosing our hospital for your healthcare needs.</p>
        <p>Here, we strive to provide the highest quality medical care to our patients.</p>
        <p>Learn more about our services and specialties.</p>

        <div class="table-container mt-4">
            <table class="table table-bordered text-center">
                <tbody>
                    <tr>
                        <td>Internal Medicine</td>
                    </tr>
                    <tr>
                        <td>Pediatrics</td>
                    </tr>
                    <tr>
                        <td>Surgery</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <p>If you have any questions or need assistance, please don't hesitate to contact us.</p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

